<%= form_for @form_path do |f| %>

<%= render partial: "/errors/error_explanation", locals: {unsaved_resource: @item} %>

<p><%= f.label :name %>
<%= f.text_field :name, required: true %></p>

<p><%= f.label :description %>
<%= f.text_area :description, required: true %></p>

<p><%= f.label :image %>
<%= f.text_field :image %></p>

<p><%= f.label :price %>
<%= f.number_field :price, min: 0.01, step: :any %></p>

<p><%= f.label :inventory %>
<%= f.number_field :inventory, min: 0 %></p>

<p><%= f.submit %></p>
<% end %>
