<div class="card float-left m-3" style="width: 18rem;">
  <div class="card-body">
    <%= link_to "Discount ##{discount.id}", @discount_path.call(discount) %>
    <ul>
      <li>
        Created at: <%= discount.created_at %>
      </li>
    </ul>
  <% if discount.percent? %>
    <p> <%= discount.value_off %>% off orders of <%= discount.min_amount %> items or more. </p>
  <% elsif discount.dollar? %>
    <p> $<%= discount.value_off %> off orders of $<%= discount.min_amount %> or more. </p>
  <% end %>
  <%= link_to "Edit", @edit_path.call(discount) %>
  <%= button_to "Delete", @discount_path.call(discount), method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
</div>
