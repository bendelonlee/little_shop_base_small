<script type="text/javascript">
      google.charts.load('current', {'packages':['bar']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['', 'Sales in USD'],
          <% @twelve_months_revenue.each do |month| %>
            ['<%= Date::MONTHNAMES[month.month.month] %>', <%= month.revenue %>],
          <% end %>
        ]);

        var options = {
          chart: {
            // title: 'Company Performance',
            // subtitle: 'Sales, Expenses, and Profit: 2014-2017',
          }
        };

        var chart = new google.charts.Bar(document.getElementById('twelve-months-revenue-column-chart'));

        chart.draw(data, google.charts.Bar.convertOptions(options));
      }
    </script>
    <div id="twelve-months-revenue-column-chart" style="width: 1000px; height: 500px;"></div>
